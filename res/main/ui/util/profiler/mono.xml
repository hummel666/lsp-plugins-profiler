<plugin resizable="true">
	<vbox spacing="4">
		<group text="groups.results" expand="true" fill="true">
			<grid rows="3" cols="2" hspacing="8" vspacing="4">
				<graph width.min="512" height.min="320" expand="true" fill="true">
					<origin hpos="-1.0" vpos="0.0" visible="false" />

					<!-- Grid -->
					<ui:with color="graph_alt_1">
						<marker v="-0.75" ox="1" oy="0" />
						<marker v="-0.25" ox="1" oy="0" />
						<marker v="0.25" ox="1" oy="0" />
						<marker v="0.75" ox="1" oy="0" />
						
						<marker v="0.25" />
						<marker v="0.75" />
						<marker v="1.25" />
						<marker v="1.75" />
					</ui:with>
					<ui:with color="graph_sec">
						<marker v="0.5" />
						<marker v="1.5" />
						<marker v="-0.5" ox="1" oy="0" />
						<marker v="0.5" ox="1" oy="0" />
					</ui:with>
					<ui:with color="graph_prim">
						<marker value="1" ox="1" oy="0" />
						<marker value="2" />
						<marker value="-1" ox="1" oy="0" />
						<marker value="1" />
					</ui:with>
					<axis min="0" max="2.0" angle="0.0" log="false" />
					<axis min="-1.0" max="1.0" angle="0.5" log="false" />

					<!-- Meshes -->
					<mesh id="rme" width="3" />

					<!-- Text -->
					<ui:with y="-1" halign="-1" valign="1">
						<text x="0" text="graph.axis.reverb_time" halign="1" />
						<text x="0.5" text="0.25" />
						<text x="1" text="0.5" />
						<text x="1.5" text="0.75" />
						<text x="2" text="1.0" />
					</ui:with>
					<ui:with x="0" halign="1" valign="-1">
						<text y="1" text="graph.axis.level" />
						<text y="0.5" text="0.5" />
						<text y="0" text="0" />
						<text y="-0.5" text="-0.5" />
					</ui:with>
				</graph>
				
				<cell rows="2">
					<vbox spacing="4">
						<label text="labels.prof.profiler_state" fill="true" text.halign="-1" />
						<grid rows="9" cols="2" hspacing="2" transpose="true">
							<ui:for id="i" first="0" last="8">
								<led id="stld" key="${i}" />
							</ui:for>
							
							<ui:with hfill="true" text.halign="-1">
								<label text="labels.prof.idle" />
								<label text="labels.prof.calibrating" />
								<label text="labels.prof.detecting_latency" />
								<label text="labels.prof.preprocessing" />
								<label text="labels.prof.waiting" /> 
								<label text="labels.prof.recording" />
								<label text="labels.prof.convolving" />
								<label text="labels.prof.postprocessing" />
								<label text="labels.prof.saving" />
							</ui:with>
						</grid>
						<hsep />
						
						<grid rows="2" cols="2" spacing="4">
							<label text="labels.prof.rt_algorithm" fill="true" halign="0" />
							<label text="labels.save_mode" fill="true" halign="0" />
							<combo id="scra" fill="true" />
							<combo fill="true" id="scsv" />
						</grid>
						
						<grid rows="2" cols="3">
							<label text="labels.offset" />
							<label text="labels.postprocess" />
							<label text="labels.save_" />
							
							<vbox>
								<knob id="offc" size="18" />
								<value id="offc" same_line="true" />
							</vbox>
							<vbox>
								<button id="post" width="96" height="20" color="yellow" led="true" text="actions.postprocess" />
								<hbox spacing="4" fill="false">
									<led id="rta" />
									<label text="labels.noise_floor" />
								</hbox>
							</vbox>
							<vbox>
								<save id="irfn" format="wav" command_id="irfc" status_id="irfs" progress_id="irfp" visibility="(:scsv != 4)" />
								<save id="irfn" format="lspc" command_id="irfc" status_id="irfs" progress_id="irfp" visibility="(:scsv == 4)" />
							</vbox>
						</grid>
					</vbox>
				</cell>

				<hbox spacing="2">
					<label text="labels.reverberation_time:s" text.halign="-1" />
					<indicator id="rti" format="f6.3!" text_color="mid" fill="false" />
					<label text="labels.energy_decay_linear_correlation" text.halign="-1" />
					<indicator id="rci" format="f6.3!" text_color="mid" fill="false" />
					<label text="labels.coarse_ir_duration" text.halign="-1" />
					<indicator id="ili" format="f6.3!" text_color="mid" fill="false" />
				</hbox>
			</grid>
		</group>
		
		<hbox spacing="4">
			<group text="groups.plug.calibrator">
				<grid rows="3" cols="3" hspacing="5">
					<label text="labels.frequency" />
					<label text="labels.amplitude" />
					<label text="labels.input_level:db" />
					
					<knob id="calf" />
					<knob id="cala" />
					<ledmeter hexpand="true" angle="0" height.min="192">
						<ledchannel id="ilv" min="-72 db" max="12 db" log="true" type="rms_peak"
							peak.visibility="true"
							value.color="mid" />
					</ledmeter>
					
					<value id="calf" />
					<value id="cala" />

					<hbox spacing="4" fill="false">
						<button id="cals" color="green" size="16" led="true" />
						<label text="labels.enable" />
						<button id="fbck" color="yellow" size="16" led="true" />
						<label text="labels.feedback" fill="true" halign="0" />
					</hbox>
				</grid>
			</group>

			<group text="groups.plug.latency_detector">
				<grid rows="3" cols="4" hspacing="5">
					<label text="labels.max_latency" />
					<label text="labels.signal.peak"/>
					<label text="labels.absolute_threshold"/>
					<label text="labels.latency:ms" />
					
					<knob id="ltdm" />
					<knob id="ltdp" />
					<knob id="ltda" />
					<vbox spacing="4" fill="false">
						 <indicator id="lti" format="f6.3!" text_color="green" />
						 <hbox spacing="4">
							 <button id="ltena" color="green" size="16" led="true" fill="false" />
							 <label text="labels.enable" fill="true" halign="0" />
						 </hbox>
					</vbox>
					
					<value id="ltdm" />
					<value id="ltdp" />
					<value id="ltda" />
					<button id="latt" height="20" width="96" color="yellow" led="true" fill="false" text="actions.measure" />
				</grid>
			</group>

			<group text="groups.test_signal">
				<grid rows="3" cols="2" hspacing="5">
					<label text="labels.coarse_duration" fill="true" />
					<label text="labels.actual_duration" fill="true" />
					
					<knob id="tsgl" />
					<indicator id="tind" format="f6.3!" text_color="green" />
					
					<value id="tsgl" />
					<button id="lint" height="20" width="96" color="yellow" led="true" text="actions.profile" />
				</grid>
			</group>
		</hbox>
	</vbox>
</plugin>
